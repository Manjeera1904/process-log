{
  "compilerOptions": {
    // Report errors on unused parameters
    "incremental": true,
    "target": "ES6", // Do not emit output (meaning do not compile code, only perform type checking)
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"], // Report errors for fallthrough cases in switch statement
    "baseUrl": ".", // Disallow inconsistently-cased references to the same file.
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }, // Unconditionally emit imports for unresolved files
    "resolveJsonModule": true, // List of library files to be included in the compilation
    "allowJs": true, // Allow default imports from modules with no default export
    "strict": true, // Enable incremental compilation by reading/writing information from prior compilations to a file on disk
    "noFallthroughCasesInSwitch": true, // Generate corresponding .d.ts file
    "noUnusedLocals": true, // Report errors on unused locals
    "noUnusedParameters": true, // Generate corrresponding .map file
    "declaration": true, // Include modules imported with .json extension
    "declarationDir": "dist/types",
    "noEmit": true, // Specify ECMAScript target version
    "outDir": "dist", // Support JSX in .tsx files
    "sourceMap": true, // Disables namespace imports (import * as fs from "fs") and enables CJS/AMD/UMD style imports (import fs from "fs")
    "allowSyntheticDefaultImports": true, // Skip type checking of all declaration files
    "esModuleInterop": true, // Enable all strict type checking options
    "forceConsistentCasingInFileNames": true, // Resolve modules using Node.js style
    "isolatedModules": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./schema.graphql"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "templates"]
}
